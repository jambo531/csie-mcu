<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:orientation="vertical"
    android:background="@drawable/door">

    <Button
        android:id="@+id/btnhome"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:background="@drawable/abc_ic_ab_back_holo_light" />

    <Button
        android:id="@+id/btnvb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="排球場"
        android:background="@drawable/abc_ab_bottom_solid_light_holo"
        android:layout_marginTop="51dp"
        android:textSize="24dp"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="籃球場"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/abc_ab_bottom_solid_light_holo"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btnbm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:text="羽球場"
        android:layout_below="@+id/btnbb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/abc_ab_bottom_solid_light_holo"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="銘傳大學"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="桌球室"
        android:id="@+id/btntt"
        android:layout_below="@+id/btnvb"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="24dp"
        android:background="@drawable/abc_ab_bottom_solid_light_holo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="操場"
        android:id="@+id/btnpg"
        android:layout_below="@+id/btnbb"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="24dp"
        android:background="@drawable/abc_ab_bottom_transparent_light_holo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="SP值=0"
        android:id="@+id/txtSp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1"
        android:textSize="20dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout><!-- From: file:/D:/CDExamples/ViewSport/ViewSport/app/src/main/res/layout/mcu.xml -->